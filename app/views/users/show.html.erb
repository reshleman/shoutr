<section class="sidebar">
  <header>
    <h1>Following</h1>
  </header>

  <div class="users">
    <%= render @user.followed_users %>
  </div>

  <header>
    <h1>Followers</h1>
  </header>

  <div class="users">
    <%= render @user.followers %>
  </div>
</section>

<section class="timeline">
  <header>
    <h1><%= @user.username %>'s Shouts</h1>
    <% unless current_user == @user %>
      <% if current_user.following?(@user) %>
        <%= button_to "Unfollow", [:follow, @user], method: :delete %>
      <% else %>
        <%= button_to "Follow", [:follow, @user] %>
      <% end %>
    <% end %>
  </header>

  <div class="shouts">
    <%= render @shouts %>
  </div>
</section>
