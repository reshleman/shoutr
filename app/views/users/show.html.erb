<aside>
  <%= render "followers", user: @user %>
  <%= render "followed_users", user: @user %>
</aside>

<section class="timeline">
  <header>
    <h1><%= @user.username %>'s Shouts</h1>

    <% unless current_user == @user %>
      <div id="follow-button">
        <% if current_user.following?(@user) %>
          <%= button_to "Unfollow", [:follow, @user], method: :delete %>
        <% else %>
          <%= button_to "Follow", [:follow, @user] %>
        <% end %>
      </div>
    <% end %>
  </header>

  <div class="shouts">
    <%= render @shouts %>
  </div>
</section>
