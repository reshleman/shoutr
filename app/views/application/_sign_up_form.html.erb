<h1>Sign Up</h1>
<%= form_for user do |form| %>
  <%= render "errors", object: user %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username, placeholder: "Username" %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "Email"  %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "Password" %>
  </div>
  <div>
    <%= form.submit "Sign up" %>
  </div>
<% end %>
